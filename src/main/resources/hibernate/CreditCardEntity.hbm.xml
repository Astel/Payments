<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.epam.lab.payments.domain.CreditCardEntity" table="credit_card" schema="public"
           catalog="srv105242_pay2">
        <id name="id">
            <column name="id" sql-type="integer"/>
        </id>
        <property name="cardholderName">
            <column name="cardholder_name" sql-type="text"/>
        </property>
        <property name="expiration">
            <column name="expiration" sql-type="date"/>
        </property>
        <property name="securityCode">
            <column name="security_code" sql-type="integer"/>
        </property>
    </class>
</hibernate-mapping>