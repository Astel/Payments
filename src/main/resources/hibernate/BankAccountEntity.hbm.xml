<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.epam.lab.payments.domain.BankAccountEntity" table="bank_account"
           schema="public" catalog="srv105242_pay2">
        <id name="id">
            <column name="id" sql-type="integer"/>
        </id>
        <property name="ownerName">
            <column name="owner_name" sql-type="text"/>
        </property>
        <property name="balance">
            <column name="balance" sql-type="integer"/>
        </property>
        <property name="isBlocked">
            <column name="is_blocked" sql-type="boolean"/>
        </property>
    </class>
</hibernate-mapping>